extends public/layout

block content
    div.section
        div.form-group.clearfix
            div.col-sm-2
                input.form-control
            div.col-sm-8.search
                a(href='#')=lang.search.text
            div.col-sm-2
                button.btn.btn-default.btn-info=lang.create_account.text
        div.table-style.col-sm-12
            table.table.table-bordered.table-striped.table-condensed
                thead
                    th= lang.thead.number
                    th= lang.thead.client
                    th= lang.thead.assignstaff
                    th= lang.thead.accountstatus
                    th= lang.thead.contact
                    th= lang.thead.email
                    th= lang.thead.phone
                    th= lang.thead.manage
                tbody
                    if lang.accounts.length>0
                        each account in lang.accounts
                            tr
                                td= account.number
                                td= account.client
                                td= account.assignstaff
                                td= account.accountstatus
                                td= account.contact
                                td= account.email
                                td= account.phone
                                td
                                    button.btn.btn-default.btn-info='Work'
                                    button.btn.btn-default.btn-info='Billing'
                                    button.btn.btn-default.btn-info='Notification'
                                    button.btn.btn-default.btn-info='Document'