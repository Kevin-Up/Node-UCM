extends public/layout

block content
    div.section
        div.form-group.clearfix
            div.col-sm-2
                input.form-control(type='text',placeholder=lang.searchplaceholder)
            div.col-sm-2
                select.form-control#searchname(name='searchname')
                    for name in lang.names
                        option=name
            div.col-sm-6.search
                a(href='#')=lang.search.text
            div.col-sm-2
                button.btn.btn-default.btn-info=lang.create_notification.text
        div.table-style.col-sm-12
            table.table.table-bordered.table-striped.table-condensed
                thead
                    th= lang.thead.number
                    th= lang.thead.name
                    th= lang.thead.description
                    th= lang.thead.recipients
                    th= lang.thead.sendtime
                    th= lang.thead.status
                    th= lang.thead.manage
                tbody
                    if lang.notifications.length>0
                        each notification in lang.notifications
                            tr
                                td= notification.number
                                td= notification.name
                                td= notification.description
                                td= notification.recipients
                                td= notification.sendtime
                                td= notification.status
                                td
                                    button.btn.btn-default.btn-info='Modify'
                                    button.btn.btn-default.btn-info='Resend'
                                    button.btn.btn-default.btn-info='Delete'