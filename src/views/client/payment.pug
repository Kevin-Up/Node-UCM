extends public/layout

block content
    div.section
        div.form-group.clearfix
            div.col-sm-2
                input.form-control(type='text',placeholder=lang.searchplaceholder)
            div.col-sm-2
                select.form-control#searchmethod(name='searchmethod')
                    for method in lang.searchmethod
                        option=method
            div.col-sm-2
                select.form-control#searchname(name='searchname')
                    for name in lang.names
                        option=name
            div.col-sm-4.search
                a(href='#')=lang.search.text
        div.table-style.col-sm-12
            table.table.table-bordered.table-striped.table-condensed
                thead
                    th= lang.thead.pay
                    th= lang.thead.method
                    th= lang.thead.note
                    th= lang.thead.date
                    th= lang.thead.amount
                    th= lang.thead.detail
                tbody

                    if lang.payments.length>0
                        each payment in lang.payments
                            tr
                                td= payment.pay
                                td= payment.method
                                td= payment.note
                                td= payment.date
                                td= payment.amount
                                td= payment.detail